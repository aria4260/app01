<div class="container-fluid">
  <div class="form-heading text-center"><h3>写真投稿</h3></div>
    <div class="form posts-form">
      <div class="form-body">

        <div class="row">
          <div class="col-xs-6 col-xs-offset-3">
            <%= form_for @post, url: posts_path do |f| %>
              <div class="form-group">
                <label>写真</label>
                <%= f.nested_fields_for :photos, wrapper_tag: :div do |p| %>
                  <p><%= p.file_field :image %>
                  <%= p.remove_nested_fields_link '削除', class: 'btn btn-default btn-xs' %></p>
                <% end %>
                <%= f.add_nested_fields_link :photos, '写真追加', class: 'btn btn-default btn-sm' %>
              </div>

              <div class="form-group">
                <%= f.label :photo_date, "撮影日" %><br>
                <%= f.date_field :photo_date, label: "撮影日", value: Time.now.strftime("%Y-%m-%d"), class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= f.label :comment, "コメント" %><br>
                <%= f.text_area :comment, class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= text_field :tag_list, value: @post.tag_list.join(','), class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= f.label :publish, "公開可否" %><br>
                <label><%= f.radio_button :publish, "true", {:checked => true} %>公開する</label><br>
                <label><%= f.radio_button :publish, "false" %>公開しない</label>
              </div>

              <div class="form-group">
                <%= f.submit "写真投稿", class: "btn btn-large btn-primary" %>
              </div>
            <% end %>
          </div>
        </div>

      </div>
    </div>
</div>
