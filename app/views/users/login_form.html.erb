<div class="main users-new">
  <div class="container">
    <div class="form-heading text-center"><h3>ログイン</h3></div>
    <div class="form users-form">
      <div class="form-body">
        <% if @error_message %>
          <div class="form-error">
            <%= @error_message %>
          </div>
        <% end %>

        <%= form_for @user, url: login_path do |f| %>
        <div class="form-group">
          <div class="row">
            <div class="col-xs-offset-4">
              <%= f.label :email %><br>
              <%= f.email_field :email, class: "col-xs-6" %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-xs-offset-4">
              <%= f.label :password %><br>
              <%= f.password_field :password, class: "col-xs-6" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-offset-4">
            <%= f.submit "ログイン", class: "btn btn-large btn-primary" %>
          </div>
        </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
