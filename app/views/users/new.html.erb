<div class="container-fluid">
  <div class="form-heading text-center"><h3>新規ユーザー登録</h3></div>
    <div class="form users-form">
      <div class="form-body">

        <div class="form-group">
          <div class="row">
            <div class="col-xs-4 col-xs-offset-4">
                <% @user.errors.full_messages.each do |message| %>
              <div class="form-error text-warning">
                <%= message %>
              </div>
              <% end %>
            </div>
          </div>
        </div>

        <%= form_for @user, url: user_path do |f| %>
        <div class="form-group">
          <div class="row">
            <div class="col-xs-offset-4">
              <p><%= f.label :name %></p>
              <%= f.text_field :name, size: 60 %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-xs-offset-4">
              <p><%= f.label :email %></p>
              <%= f.email_field :email, size: 60 %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-xs-offset-4">
              <p><%= f.label :password, "パスワード(6文字以上)" %></p>
              <%= f.password_field :password, size: 60 %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-xs-offset-4">
              <p><%= f.label :password_confimation, "パスワード(確認用)" %></p>
              <%= f.password_field :password_confimation, size: 60 %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-offset-4">
            <%= f.submit "新規登録", class: "btn btn-large btn-primary" %>
          </div>
        </div>
        <% end %>

      </div>
    </div>
</div>
