<div class="container-fluid">
  <div class="form-heading text-center"><h3>新規ユーザー登録</h3></div>
    <div class="form users-form">
      <div class="form-body">

        <div class="form-group">
          <div class="row">
            <div class="col-xs-4 col-xs-offset-4">
                <% @user.errors.full_messages.each do |message| %>
              <div class="form-error text-warning">
                <%= message %>
              </div>
              <% end %>
            </div>
          </div>
        </div>

        <%= form_for @user, url: users_create_path do |f| %>
        <div class="form-group">
          <div class="row">
            <div class="col-xs-4 col-xs-offset-4">
              <%= f.label :name, "ユーザー名" %><br>
              <%= f.text_field :name %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-xs-4 col-xs-offset-4">
              <%= f.label :email, "メールアドレス" %><br>
              <%= f.email_field :email %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-xs-4 col-xs-offset-4">
              <%= f.label :password_digest, "パスワード(6文字以上)" %><br>
              <%= f.password_field :password_digest %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-4 col-xs-offset-4">
            <%= f.submit "新規登録" %>
          </div>
        </div>
        <% end %>

      </div>
    </div>
</div>
