<div class="container-fluid">
  <div class="form-heading text-center"><h3>新規ユーザー登録</h3></div>
    <div class="form users-form">
      <div class="form-body">

        <div class="row">
          <div class="col-xs-4 col-xs-offset-4">
            <!--<% @user.errors.full_messages.each do |message| %>
            <div class="form-error text-warning">
              <%= message %>
            </div>
            <% end %>-->

            <%= bootstrap_form_for @user, url: users_path do |f| %>
              <%= f.text_field :name %>
              <%= f.email_field :email %>
              <%= f.password_field :password, label: "パスワード(6文字以上)" %>
              <%= f.password_field :password_confimation, label: "パスワード(確認用)" %>
              <%= f.submit "新規登録", class: "btn btn-large btn-primary" %>
            <% end %>
          </div>
        </div>

      </div>
    </div>
</div>
